  border-radius: var(--radius-md);
  border: 2px solid var(--gray-200);
  box-shadow: var(--shadow-md);
  transition: all var(--transition-base);
  position: relative;
  overflow: hidden;
}

.output-metric::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
