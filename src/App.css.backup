.table-container {
  overflow-x: auto;
  border-radius: var(--radius-md);
  border: 2px solid var(--gray-200);
  box-shadow: var(--shadow-md);
  background: white;
}

.work-items-table {
  width: 100%;
  border-collapse: separate;
  border-spacing: 0;
  font-size: 0.925rem;
}

.work-items-table thead tr {
  background: linear-gradient(180deg, #FFFFFF 0%, var(--gray-100) 100%);
}

.work-items-table th {
  padding: 1rem 0.875rem;
  text-align: left;
  font-weight: 700;
  font-size: 0.8125rem;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  color: var(--gray-700);
  border-bottom: 3px solid var(--meijer-red);
  white-space: nowrap;
  position: sticky;
  top: 0;
  background: inherit;
  z-index: 10;
}

.work-items-table td {
  padding: 1rem 0.875rem;
  text-align: left;
  border-bottom: 1px solid var(--gray-200);
  vertical-align: middle;
}

.work-items-table tbody tr {
  transition: all var(--transition-fast);
}

.work-items-table tbody tr:hover {
  background-color: rgba(228, 0, 43, 0.02);
  box-shadow: inset 3px 0 0 var(--meijer-red);
}

.work-items-table tbody tr:focus-within {
  background-color: rgba(228, 0, 43, 0.03);
  box-shadow: inset 3px 0 0 var(--meijer-red);
}

.work-items-table tbody tr:nth-child(even) {
  background-color: var(--gray-50);
}

.work-items-table tbody tr:nth-child(even):hover {
  background-color: rgba(228, 0, 43, 0.03);
}

